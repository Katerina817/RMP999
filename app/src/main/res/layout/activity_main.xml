<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/green">
    <ImageView
        android:id="@+id/rabbit"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/rabbit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rabbit"
        android:text="@string/charact"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="38dp"
        android:gravity="center"
        android:textColor="@color/dark_green"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        />
    <EditText
        android:id="@+id/edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Ð•nter the characteristics of the rabbit"
        android:textColorLink="@color/dark_green"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:layout_marginTop="15dp"
        android:textSize="23dp"
        android:background="#EDFDF5"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittext"
        android:layout_marginTop="200dp"
        android:text="Share"
        android:textColor="@color/green"
        android:backgroundTint="@color/dark_green"
        />

    <ImageView
        android:layout_width="450dp"
        android:layout_height="150dp"
        android:src="@drawable/grass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>